<Project>
    <PropertyGroup>
        <CompileDependsOn>EnsureEditorConfig;$(CompileDependsOn)</CompileDependsOn>
    </PropertyGroup>

    <Target
        Name="EnsureEditorConfig"
        BeforeTargets="Compile">
      <EnsureEditorConfigTask SolutionDir="$(SolutionDir)" ReferenceEditorConfig="$(ReferenceEditorConfig)" />
    </Target>
</Project>